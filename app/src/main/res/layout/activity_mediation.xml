<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_200"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/notosanskrbold"
        android:text="Mediation"
        android:textColor="@color/black"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="당신을 위한 상황 별 영상 가이드 지침서"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="330dp"
        android:layout_height="364dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/notosanskrbold"
        android:text="오늘, 명상 하셨나요?"
        android:textColor="@color/black"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:textColor="@color/black"
        android:fontFamily="@font/notosanskrbold"
        android:text="2022년 1월 4주차"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="24dp">
            <TextView
                android:id="@+id/mon_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="월"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:id="@+id/mon_cb"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/unchecked" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="24dp">
            <TextView
                android:id="@+id/tue_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="화"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:id="@+id/tue_cb"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/unchecked" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="24dp">
            <TextView
                android:id="@+id/wed_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="수"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:id="@+id/wed_cb"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/unchecked" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="24dp">
            <TextView
                android:id="@+id/thu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="목"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:id="@+id/thu_cb"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/unchecked" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="24dp">
            <TextView
                android:id="@+id/fri_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="금"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:id="@+id/fri_cb"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/unchecked" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="24dp">
            <TextView
                android:id="@+id/sat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="토"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:id="@+id/sat_cb"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/unchecked" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="24dp">
            <TextView
                android:id="@+id/sun_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="일"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:id="@+id/sun_cb"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/unchecked" />
        </LinearLayout>



    </LinearLayout>


</LinearLayout>
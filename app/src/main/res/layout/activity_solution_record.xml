<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Solution1">

    <!-- 솔루션 클릭 시 나타나는 솔루션 가이드_와이어프레임 -->
    <RelativeLayout
        android:id="@+id/some_id"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/some_id"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 솔루션 몇 주차인지 -->
        <!-- Rectangle 45 -->

        <TextView
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="260dp"
            android:text="솔루션 후기" />

        <View
            android:id="@+id/rectangle_4"
            android:layout_width="170dp"
            android:layout_height="70.21dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_4" />


        <!-- 솔루션 내용 -->
        <!-- Rectangle 46 -->

        <TextView
            android:id="@+id/some_id1"
            android:layout_width="127dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="53dp"
            android:gravity="top"
            android:text="솔루션 3일차"
            android:textAppearance="@style/some_id" />

        <View
            android:id="@+id/rectangle_4_2"
            android:layout_width="334.21dp"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="330dp"
            android:background="@drawable/rectangle_4" />


        <!-- 솔루션 완료 -->

        <EditText
            android:id="@+id/memo"
            android:layout_width="320dp"
            android:layout_height="110dp"
            android:layout_alignTop="@+id/rectangle_4_2"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:gravity="top|start"
            android:hint="솔루션 메모" />

        <Button
            android:id="@+id/btnsave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rectangle_4_2"
            android:layout_marginStart="22dp"
            android:layout_marginTop="33dp"
            android:background="@drawable/rectangle_4_3"
            android:text="저장"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/feeling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="145dp"
            android:text="오늘의 감정" />


    </RelativeLayout>

    <!-- Rectangle 47 -->
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Solution1"
    android:background="@color/orange_200"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="58dp"
                android:fontFamily="@font/notosanskrbold"
                android:text="오늘의 솔루션 기록"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/notosanskrregular"
                android:text="솔루션을 마치고 오늘의 감정과 솔루션을 기록하세요!"
                android:textColor="@color/gray"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:fontFamily="@font/notosanskrbold"
                android:text="오늘 느낀 감정은 무엇인가요?"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="335dp"
                android:layout_height="132dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/square"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cho1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/choicebox"
                        android:fontFamily="@font/notosanskrregular"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="8dp"
                        android:text="행복한"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/cho2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/choicebox"
                        android:fontFamily="@font/notosanskrregular"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="8dp"
                        android:text="활기찬"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/cho3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/choicebox"
                        android:fontFamily="@font/notosanskrregular"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="8dp"
                        android:text="무난한"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <TextView
                    android:id="@+id/cho4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/choicebox"
                    android:fontFamily="@font/notosanskrregular"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="8dp"
                    android:text="우울한"
                    android:textColor="@color/black"
                    android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cho5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/choicebox"
                        android:fontFamily="@font/notosanskrregular"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="8dp"
                        android:text="무기력"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/cho6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/choicebox"
                        android:fontFamily="@font/notosanskrregular"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="8dp"
                        android:text="답답한"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/cho7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/choicebox"
                        android:fontFamily="@font/notosanskrregular"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="8dp"
                        android:text="불안한"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/cho8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/choicebox"
                        android:fontFamily="@font/notosanskrregular"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="8dp"
                        android:text="가벼운"
                        android:textColor="@color/black"
                        android:textSize="13dp" />
                </LinearLayout>
                </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:fontFamily="@font/notosanskrbold"
                android:text="오늘의 솔루션은 어떠셨나요?"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="335dp"
                android:layout_height="132dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/square"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cho9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/choicebox"
                        android:fontFamily="@font/notosanskrregular"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="8dp"
                        android:text="성찰됨"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/cho10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/choicebox"
                        android:fontFamily="@font/notosanskrregular"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="8dp"
                        android:text="깨달음"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/cho11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/choicebox"
                        android:fontFamily="@font/notosanskrregular"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="8dp"
                        android:text="도움됨"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/cho12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/choicebox"
                        android:fontFamily="@font/notosanskrregular"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="8dp"
                        android:text="안정됨"
                        android:textColor="@color/black"
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cho13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/choicebox"
                        android:fontFamily="@font/notosanskrregular"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="8dp"
                        android:text="아직 잘 모르겠음"
                        android:textColor="@color/black"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:fontFamily="@font/notosanskrbold"
                android:text="자유롭게 메모해보세요!"
                android:textColor="@color/black"
                android:textSize="18dp" />

        <EditText
            android:layout_width="335dp"
            android:layout_height="97dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/square"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="25dp"/>

            <TextView
                android:id="@+id/btnsave"
                android:layout_width="155dp"
                android:layout_height="41dp"
                android:text="솔루션 완료하기"
                android:textSize="16dp"
                android:fontFamily="@font/notosanskrbold"
                android:textColor="@color/white"
                android:background="@drawable/button_green700"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="37dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/nav_mediation"
            android:layout_width="wrap_content"
            android:layout_height="93dp"
            android:src="@drawable/nav_mediation_deactive" />
        <ImageView
            android:id="@+id/nav_record"
            android:layout_width="wrap_content"
            android:layout_height="93dp"
            android:src="@drawable/nav_record_active" />
        <ImageView
            android:id="@+id/nav_closer"
            android:layout_width="wrap_content"
            android:layout_height="93dp"
            android:src="@drawable/nav_closer_active" />
    </LinearLayout>




</LinearLayout>
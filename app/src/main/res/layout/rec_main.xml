<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RecListViewActivity"
    android:orientation="vertical"
    android:background="@color/orange_200">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosanskrbold"
                            android:text="Hi! WUDC"
                            android:textColor="@color/black"
                            android:textSize="22dp"
                            android:layout_marginTop="50dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="19dp"
                            android:fontFamily="@font/notosanskrregular"
                            android:text="솔루션 3일차"
                            android:textColor="@color/gray"
                            android:textSize="12dp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/btn_weekChange"
                                    android:layout_width="81dp"
                                    android:layout_height="33dp"
                                    android:text="주기 변경"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/notosanskrbold"
                                    android:textColor="@color/green_700"
                                    android:background="@drawable/button_green200"
                                    android:gravity="center"
                                    android:layout_marginTop="14dp"/>
                                <TextView
                                    android:id="@+id/btn_solChange"
                                    android:layout_width="81dp"
                                    android:layout_height="33dp"
                                    android:text="솔루션 변경"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/notosanskrbold"
                                    android:textColor="@color/green_700"
                                    android:background="@drawable/button_green200"
                                    android:gravity="center"
                                    android:layout_marginTop="14dp"
                                    android:layout_marginLeft="12dp"/>
                        </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="108dp"
                    android:layout_height="105dp"
                    android:src="@drawable/profile_img_default"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="50dp"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="490dp"
            android:orientation="vertical"
            android:background="@drawable/square"
            android:layout_marginTop="34dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="27dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosanskrregular"
                                    android:text="솔루션"
                                    android:textColor="@color/gray"
                                    android:textSize="12dp"
                                    android:layout_marginTop="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosanskrbold"
                                    android:text="1단계"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:layout_marginTop="10dp"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/step1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/step1"
                            android:layout_marginLeft="46dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosanskrregular"
                                    android:text="솔루션"
                                    android:textColor="@color/gray"
                                    android:textSize="12dp"
                                    android:layout_marginTop="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosanskrbold"
                                    android:text="2단계"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:layout_marginTop="10dp"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/step2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/step2"
                            android:layout_marginLeft="46dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosanskrregular"
                                    android:text="솔루션"
                                    android:textColor="@color/gray"
                                    android:textSize="12dp"
                                    android:layout_marginTop="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosanskrbold"
                                    android:text="3단계"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:layout_marginTop="10dp"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/step3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/step3"
                            android:layout_marginLeft="46dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosanskrregular"
                                    android:text="솔루션"
                                    android:textColor="@color/gray"
                                    android:textSize="12dp"
                                    android:layout_marginTop="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosanskrbold"
                                    android:text="4단계"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="27dp"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/step4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/step4"
                            android:layout_marginLeft="46dp"/>
                </LinearLayout>
        </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/nav_mediation"
                    android:layout_width="wrap_content"
                    android:layout_height="93dp"
                    android:src="@drawable/nav_mediation_deactive" />
                <ImageView
                    android:id="@+id/nav_record"
                    android:layout_width="wrap_content"
                    android:layout_height="93dp"
                    android:src="@drawable/nav_record_active" />
                <ImageView
                    android:id="@+id/nav_closer"
                    android:layout_width="wrap_content"
                    android:layout_height="93dp"
                    android:src="@drawable/nav_closer_active" />
        </LinearLayout>
</LinearLayout>